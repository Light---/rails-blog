<h1> New Article </h1>

<%= form_for :article, url: articles_path do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, class: "form-control" %>
  </div>

  <p>
    <%= f.submit class: "btn btn-default" %>
  </p>
<% end %>
